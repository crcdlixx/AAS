{
  "name": "aas-desktop",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "src/main.mjs",
  "scripts": {
    "build:web": "npm --prefix ../../client run build",
    "sync:web": "node scripts/sync-web.mjs",
    "dist": "npm run build:web && npm run sync:web && electron-builder --publish never"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "ai-question-solver": "file:../..",
    "express": "^4.18.2",
    "http-proxy-middleware": "^3.0.0"
  },
  "build": {
    "appId": "com.aas.desktop",
    "productName": "AAS",
    "files": [
      "src/**",
      "renderer/**",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
